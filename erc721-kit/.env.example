# ERC721 Kit Environment Configuration
# Copy this file to .env and update with your values

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Infura Project ID for RPC access
INFURA_PROJECT_ID=your_infura_project_id

# API keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_API_KEY=your_optimism_api_key

# CoinMarketCap API key for gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Contract Configuration
FEE_RECIPIENT=0x0000000000000000000000000000000000000000
DISPUTE_RESOLVER=0x0000000000000000000000000000000000000000

# Fee percentages (in basis points: 250 = 2.5%)
MARKETPLACE_FEE_PERCENTAGE=250
ESCROW_FEE_PERCENTAGE=250
DEFAULT_ROYALTY_PERCENTAGE=250

# Frontend Configuration (for example-app)
REACT_APP_MARKETPLACE_ADDRESS=
REACT_APP_ESCROW_ADDRESS=
REACT_APP_ROYALTY_ENGINE_ADDRESS=
REACT_APP_MOCK_NFT_ADDRESS=
REACT_APP_CHAIN_ID=11155111

# IPFS Configuration
REACT_APP_IPFS_GATEWAY=https://ipfs.io/ipfs/
REACT_APP_PINATA_API_KEY=
REACT_APP_PINATA_SECRET_KEY=

# Development Settings
REPORT_GAS=false
COVERAGE=false
DEBUG=false

# Network Settings
DEFAULT_NETWORK=sepolia
BLOCK_CONFIRMATIONS=3

# Security Settings
ENABLE_EMERGENCY_PAUSE=true
ENABLE_WHITELIST=true
MAX_GAS_PRICE=100000000000

# Testing Settings
TEST_TIMEOUT=120000
TEST_ACCOUNTS=20
INITIAL_BALANCE=10000

# Deployment Settings
DEPLOY_VERIFY=true
DEPLOY_WAIT_CONFIRMATIONS=3
DEPLOY_TIMEOUT=300000

# Advanced Settings
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200
VIA_IR=true
